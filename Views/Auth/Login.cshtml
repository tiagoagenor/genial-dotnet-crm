@model genial_dotnet_crm.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
    <div>
        <div class="mx-auto h-12 w-12 bg-black rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-sm">PB</span>
        </div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Fa√ßa login na sua conta
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Ou
            <a asp-action="Register" class="font-medium text-black hover:text-gray-700">
                crie uma nova conta
            </a>
        </p>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="rounded-md bg-green-50 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-check-circle text-green-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">
                        @TempData["SuccessMessage"]
                    </p>
                </div>
            </div>
        </div>
    }

    <form asp-action="Login" method="post" class="mt-8 space-y-6">
        <div asp-validation-summary="All" class="text-red-600 text-sm"></div>
        
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
        
        <div class="rounded-md shadow-sm -space-y-px">
            <div>
                <label asp-for="Email" class="sr-only">Email</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-envelope text-gray-400"></i>
                    </div>
                    <input asp-for="Email" 
                           type="email" 
                           autocomplete="email" 
                           required 
                           class="appearance-none rounded-none relative block w-full px-10 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-black focus:border-black focus:z-10 sm:text-sm" 
                           placeholder="Email" />
                </div>
                <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
            </div>
            <div>
                <label asp-for="Password" class="sr-only">Senha</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-lock text-gray-400"></i>
                    </div>
                    <input asp-for="Password" 
                           type="password" 
                           autocomplete="current-password" 
                           required 
                           class="appearance-none rounded-none relative block w-full px-10 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-black focus:border-black focus:z-10 sm:text-sm" 
                           placeholder="Senha" />
                </div>
                <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
            </div>
        </div>

        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <input asp-for="RememberMe" 
                       type="checkbox" 
                       class="h-4 w-4 text-black focus:ring-black border-gray-300 rounded" />
                <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900">
                    Lembrar-me
                </label>
            </div>

            <div class="text-sm">
                <a href="#" class="font-medium text-black hover:text-gray-700">
                    Esqueceu a senha?
                </a>
            </div>
        </div>

        <div>
            <button type="submit" 
                    class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-black hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black">
                <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                    <i class="fas fa-sign-in-alt text-gray-300 group-hover:text-gray-400"></i>
                </span>
                Entrar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




