    Layout = "_DashboardLayout";
}

<div class="h-screen flex flex-col items-center justify-center bg-white p-4">
    <div class="text-center space-y-4">
        <h1 class="text-2xl font-bold text-gray-900">404 - Página não encontrada</h1>
        <p class="text-gray-500 max-w-md mx-auto">
